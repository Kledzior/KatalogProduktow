@using Kledzik.KatalogSpiworow.Interfaces
@{
    ViewData["Title"] = "Dodaj śpiwór";
    var producenci = ViewBag.Producenci as IEnumerable<IProducent>;
}

<h1>Dodaj nowy śpiwór</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group mb-3">
                <label class="control-label">Nazwa modelu</label>
                <input name="model" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Producent</label>
                <select name="producentId" class="form-control">
                    @if (producenci != null)
                    {
                        foreach (var p in producenci)
                        {
                            <option value="@p.Id">@p.Nazwa</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Temperatura (°C)</label>
                <input name="temperatura" type="number" class="form-control" value="0" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Masa (g)</label>
                <input name="masa" type="number" step="0.1" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Cena (zł)</label>
                <input name="cena" type="number" step="0.01" class="form-control" required />
            </div>

            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Powrót</a>
            </div>
        </form>
    </div>
</div>