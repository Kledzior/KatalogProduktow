@using Kledzik.KatalogSpiworow.Interfaces
@model ISpiwor

@{
    ViewData["Title"] = "Edycja śpiwora";
    var producenci = ViewBag.Producenci as IEnumerable<IProducent>;
}

<h1>Edytuj śpiwór</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="form-group mb-3">
                <label class="control-label">Nazwa modelu</label>
                <input name="model" class="form-control" value="@Model.Model" required />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Producent</label>
                <select name="producentId" class="form-control">
                    @if (producenci != null)
                    {
                        foreach (var p in producenci)
                        {
                            <!option value="@p.Id" @(p.Id == Model.ProducentId ? "selected" : "")>@p.Nazwa</!option>
                        }
                    }
                </select>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Temperatura (°C)</label>
                <input name="temperatura" type="number" class="form-control" value="@Model.Temperatura" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Masa (g)</label>
                <input name="masa" type="number" step="0.1" class="form-control" value="@Model.Masa" required />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Cena (zł)</label>
                <input name="cena" type="number" step="0.01" class="form-control" value="@Model.Cena" required />
            </div>

            <div class="form-group">
                <input type="submit" value="Zapisz zmiany" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>